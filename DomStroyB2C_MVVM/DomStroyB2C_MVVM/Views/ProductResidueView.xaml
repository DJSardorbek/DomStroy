                                    <Setter Property="Background" Value="#FFFFFF"/>
                                    <Setter Property="Foreground" Value="#302F2F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TabItem.Style>
                    <local:TovarAnalizView/>
                </TabItem>

                <TabItem Width="160" Height="42">
