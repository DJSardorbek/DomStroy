                                        <Border Grid.Column="1" BorderThickness="0 0 1 1 " BorderBrush="#909DBA" Height="25">
                                            <TextBlock  Text="Miqdori" TextAlignment="Center"/>
                                        </Border>

                                    </Grid>
                                </Grid>

                            </DataGridTemplateColumn.Header>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <!--first column for measurement-->
                                        <Grid Grid.Column="0">
                                            <TextBlock Text="{Binding measurement}" Foreground="#F57070" FontFamily="Segoe UI"
                                                       FontSize="13px" TextAlignment="Center"/>
                                        </Grid>

                                        <!--second column for measurement-->
                                        <Grid Grid.Column="1">
                                            <TextBlock Text="{Binding diff_quan}" Foreground="#F57070" FontFamily="Segoe UI"
                                                       FontSize="13px" TextAlignment="Center"/>
                                        </Grid>

                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>


                        <DataGridTextColumn Header="Yaroqlilik Muddati" Binding="{Binding last_date}" IsReadOnly="True" Width="150*"/>
                        <DataGridTextColumn Header="Farq summa" Binding="{Binding diff_summa}" IsReadOnly="True" Width="150*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                    </DataGrid.Columns>

                </DataGrid>

            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
