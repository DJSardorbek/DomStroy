                       VerticalAlignment="Center" 
                       Margin="-600 0 0 0"/>
                    <Button Style="{StaticResource btnNoneBorder}" Width="50" Margin="-10 0 0 0">
                        <Image Source="../Images/refresh.png" Width="40" Height="40"/>
                    </Button>
                </StackPanel>

                <!--second column for searching from list-->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" HorizontalAlignment="Right" Margin="0 0 20 0">
